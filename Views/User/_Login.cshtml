@model LoginUser

<div class="container shadow-lg">
    <div class="row">
        <div class="col mb-5 rounded">
            <form asp-action="Login">
                <h3 class="text-center">Login</h3>
                <div class="mb-3 p-3">
                    <label asp-for="LoginEmail">Email: </label>
                    <input type="text" class="form-control" id="Email" placeholder="Email"
                        asp-for="LoginEmail">
                    <span asp-validation-for="LoginEmail" class="text-danger font-weight-bold"></span>
                </div>
                <div class="mb-3 p-3">
                    <label asp-for="LoginPassword">Password:</label>
                    <input type="text" class="form-control" id="LoginPassword" placeholder="Password"
                        asp-for="LoginPassword">
                    <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
                </div>
                <div class="mb-5 w-25 mx-auto">
                    <button class="btn btn-outline-primary">Login</button>
                </div>
            </form>